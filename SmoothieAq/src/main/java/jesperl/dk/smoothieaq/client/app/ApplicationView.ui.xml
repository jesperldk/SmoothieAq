<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="msg" type="jesperl.dk.smoothieaq.client.app.AppMessages"/>

    <m:MaterialPanel>
        <m:MaterialHeader>
            <m:MaterialNavBar activates="sidenav">
                <m:MaterialNavBrand paddingLeft="60" text="Smoothie Aq" />
            </m:MaterialNavBar>
        </m:MaterialHeader>
        <m:MaterialSideNavDrawer ui:field="sidenav" m:id="sidenav" alwaysShowActivator="true" showOnAttach="true" width="280" withHeader="true">
        </m:MaterialSideNavDrawer>

        <m:MaterialContainer ui:field="main" paddingTop="80">
            <m:MaterialPanel textAlign="CENTER">
                <m:MaterialLabel text="Welcome" textColor="ORANGE" fontSize="1em"/>
            </m:MaterialPanel>
        </m:MaterialContainer>

    </m:MaterialPanel> 
</ui:UiBinder>
